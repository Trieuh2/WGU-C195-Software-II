      <TextArea fx:id="descriptionTextArea" layoutX="162.0" layoutY="161.0" prefHeight="65.0" prefWidth="148.0" wrapText="true" />
      <TextField fx:id="locationTextField" layoutX="162.0" layoutY="254.0" />
      <TextField fx:id="typeTextField" layoutX="162.0" layoutY="315.0" />
      <MenuButton fx:id="contactMenuButton" layoutX="458.0" layoutY="315.0" mnemonicParsing="false" text="Select..." />
      <Label layoutX="310.0" layoutY="258.0" text="Customer">
         <padding>
            <Insets left="30.0" />
         </padding>
      </Label>
      <MenuButton fx:id="customerMenuButton" layoutX="458.0" layoutY="254.0" mnemonicParsing="false" text="Select..." />
      <Button fx:id="cancelButton" layoutX="634.0" layoutY="364.0" mnemonicParsing="false" text="Cancel" />
      <Button fx:id="saveButton" layoutX="586.0" layoutY="364.0" mnemonicParsing="false" onAction="#addAppointment" text="Save" />
   </children>
</AnchorPane>
