                  </MenuButton>
                  <MenuButton fx:id="endTimeMenuButton" mnemonicParsing="false" text="Time">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </MenuButton>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets left="30.0" />
         </padding>
      </VBox>
      <TextField fx:id="appointmentIDTextField" disable="true" editable="false" layoutX="162.0" layoutY="68.0" />
