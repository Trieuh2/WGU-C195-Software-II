                     <HBox.margin>
                        <Insets left="20.0" right="5.0" />
                     </HBox.margin></MenuButton>
                  <MenuButton fx:id="startDayMenuButton" mnemonicParsing="false" text="Day">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></MenuButton>
                  <MenuButton fx:id="startYearMenuButton" mnemonicParsing="false" text="Year">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></MenuButton>
                  <MenuButton fx:id="startTimeMenuButton" mnemonicParsing="false" text="Time">
                     <HBox.margin>
